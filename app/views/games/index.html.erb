<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Listing Active Games</h1>
      <table>
        <thead>
          <tr>
            <th>Player1</th>
            <th>Player2</th>
            <th>Current player</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= game.users[0].username %></td>
              <td><%= game.users[1].username %></td>
              <td><%= game.current_player_id %></td>
              <td><%= link_to 'Show', game %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>


    <div class="col-md-6">
      <h1>Join a Game</h1>
      <table>
        <thead>
          <tr>
            <th>Player1</th>
            <th>Player2</th>
            <th>Current player</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @waiting.each do |game| %>
            <tr>
              <td><%= game.users[0].username %></td>
              <td><%= game.current_player_id %></td>
              <td><%= link_to 'Show', game %></td>
              <td><%= link_to 'Join', join_game_path(game), method: :put %></td>

            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>







<%= link_to 'New Game', {:action => :create}, :method => :post %>
